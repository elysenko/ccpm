{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ccpm.dev/schemas/persona.schema.json",
  "title": "Synthetic Persona",
  "description": "Schema for synthetic test personas used in E2E testing",
  "type": "object",
  "required": ["id", "name", "role", "demographics", "behavioral", "journeys", "testData", "feedback", "metadata"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^persona-[0-9]{2}$",
      "description": "Unique persona identifier (e.g., persona-01)"
    },
    "name": {
      "type": "string",
      "minLength": 2,
      "description": "Realistic full name for the persona"
    },
    "role": {
      "type": "string",
      "description": "Job role or user type (e.g., Accounts Payable Clerk)"
    },
    "demographics": {
      "type": "object",
      "required": ["age", "techProficiency", "industry", "companySize", "devicePreference"],
      "properties": {
        "age": {
          "type": "integer",
          "minimum": 18,
          "maximum": 80
        },
        "techProficiency": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        },
        "industry": {
          "type": "string"
        },
        "companySize": {
          "type": "string",
          "enum": ["small", "medium", "enterprise"]
        },
        "devicePreference": {
          "type": "string",
          "enum": ["desktop", "mobile", "both"]
        },
        "accessibilityNeeds": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        }
      }
    },
    "behavioral": {
      "type": "object",
      "required": ["goals", "painPoints", "preferredWorkflow", "patienceLevel", "errorTolerance", "commonMistakes"],
      "properties": {
        "goals": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "maxItems": 5
        },
        "painPoints": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "maxItems": 5
        },
        "preferredWorkflow": {
          "type": "string"
        },
        "patienceLevel": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        },
        "errorTolerance": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        },
        "commonMistakes": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "maxItems": 5
        }
      }
    },
    "journeys": {
      "type": "object",
      "required": ["primary", "frequency", "sessionDuration"],
      "properties": {
        "primary": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^J-[0-9]{3}$"
          },
          "minItems": 1
        },
        "secondary": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^J-[0-9]{3}$"
          },
          "default": []
        },
        "frequency": {
          "type": "string",
          "enum": ["daily", "weekly", "monthly", "occasional"]
        },
        "sessionDuration": {
          "type": "string",
          "enum": ["short", "medium", "long"]
        }
      }
    },
    "testData": {
      "type": "object",
      "required": ["email", "password", "profileData"],
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "password": {
          "type": "string",
          "minLength": 8
        },
        "profileData": {
          "type": "object",
          "required": ["displayName"],
          "properties": {
            "displayName": { "type": "string" },
            "avatar": { "type": "string" },
            "preferences": {
              "type": "object",
              "additionalProperties": true
            }
          }
        },
        "seedData": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": { "type": "object" }
          },
          "default": {}
        }
      }
    },
    "feedback": {
      "type": "object",
      "required": ["style", "complaintThreshold", "praiseThreshold", "likelyComplaints", "likelyPraises", "verbosity"],
      "properties": {
        "style": {
          "type": "string",
          "enum": ["detailed", "brief", "frustrated", "enthusiastic"]
        },
        "complaintThreshold": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        },
        "praiseThreshold": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        },
        "likelyComplaints": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "likelyPraises": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "verbosity": {
          "type": "string",
          "enum": ["minimal", "moderate", "verbose"]
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["userType", "generatedFrom", "createdAt"],
      "properties": {
        "userType": {
          "type": "string",
          "enum": ["primary", "secondary", "admin", "edge_case"]
        },
        "generatedFrom": {
          "type": "string",
          "description": "Journey IDs that informed this persona"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
